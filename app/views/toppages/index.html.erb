<% if logged_in? %>
  <% if @posts.any? %>
    <% @posts.each do |post| %>
      <%= image_tag post.photo.url if post.photo %>
    <% end %>
    <%= paginate @posts %>
  <% end %>
<% else %>
  <div class="container">
    <div class="center jumbotron">
      <h1>Mama Cafe</h1>
      <%= link_to "ログイン", login_path %>
      <p>新規登録は<%= link_to "こちら", signup_path %>から</p>
    </div>
  </div>
<% end %>