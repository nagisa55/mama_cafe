<div>
	<%= image_tag @post.photo.url if @post.photo? %>
</div>
<%= @post.content %>
<%= render "favorites/favorite", post: @post %>
<!--コメント一覧-->
<% @comments.each do |comment| %>
	<%= comment.username %>
	<%= comment.content %>
<% end %>
<%= form_with(model:[@post, @comment], local: true) do |f| %>
	<%= f.text_field :content %>
	<%= f.submit 'コメントする' %>
<% end %>
<%= link_to "一覧に戻る", user_path(@user) %>